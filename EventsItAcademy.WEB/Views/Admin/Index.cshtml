@model SettingsViewModel

<div class="card">
        <h3 class="card-title m-3">Administrator Panel</h3>
    <div class="card-body">
        <div class="card-header">
            Events
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mt-1">
                 <a class="btn btn-primary" asp-controller="Event" asp-action="PendingEvents">Pending Events</a>
                @* <p>0 pending events</p>*@
            </div>
            
            <div class="d-flex justify-content-between mt-1">
                 <a class="btn btn-primary" asp-controller="Event" asp-action="ArchivedEvents">Archived Events</a>
                 @*<p>0 archieved events</p>*@
            </div>
        </div>
        <div class="card-header">
            Roles
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mt-1">
                 <a class="btn btn-primary" asp-controller="Admin" asp-action="ListRoles">Manage roles</a>
            </div>
        </div>
        <hr />
        <div class="card-title">
            Other Settings
        </div>
        <div class="card-body">
            
            @using(Html.BeginForm("SetSettings","Admin",FormMethod.Post))
            {
                <lablel>Days of allowing edit after creating an event</lablel>
                <br />
                 @Html.EditorFor(x=>x.EventEditLimitDays)
                 <br />

                 <lablel>Days of booking duration</lablel>
                <br />
                 @Html.EditorFor(x=>x.EventBookingPeriod)
                 <br />
                 <br />
                 <input type="submit" value="Update Settings" class="btn btn-primary"/>
            }

            <br />

@*            @using(Html.BeginForm("SetSettings","Admin",FormMethod.Post))
            {
                 <input type="number" name="EditDate" />
                <input type="submit" />
            }*@

        </div>
        
    </div>
</div>